<center><h1> Sign Up </h1></center>

  <%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, :autofocus => true%>

    <%= f.label :email %><br />
    <%= f.email_field :email%>

    <%= f.label :password %><br />
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign up" %>
  <% end %>


